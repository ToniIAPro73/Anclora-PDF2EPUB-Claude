# ==============================================================================
# ANCLORA PDF2EPUB - Environment Configuration Template
# ==============================================================================
# 
# SECURITY NOTICE: This file contains placeholder values only.
# Copy to .env and replace with your actual values.
# NEVER commit .env files to version control!
#
# ==============================================================================

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Port configuration
FRONTEND_PORT=5178
BACKEND_PORT=5175
NGINX_PORT=80
WORKER_METRICS_PORT=8001

# Application environment
FLASK_ENV=development
FLASK_APP=app

# Storage configuration
UPLOAD_FOLDER=uploads
RESULTS_FOLDER=results

# Resource limits
MAX_WORKERS=4
CONVERSION_TIMEOUT=300

# ==============================================================================
# SECURITY SECRETS (REPLACE WITH ACTUAL VALUES)
# ==============================================================================

# Flask application secret key
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_flask_secret_key_here_64_chars_minimum

# JWT configuration
JWT_SECRET=your_jwt_secret_here_64_chars_minimum
JWT_EXPIRATION=3600

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================

REDIS_PORT=6379
# Generate strong password: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=your_redis_password_here_32_chars_minimum

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase public anonymous key (safe to expose in frontend)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase JWT secret (KEEP SECRET - server-side only)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Database URL (if using direct connection)
# SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ==============================================================================
# FRONTEND ENVIRONMENT (Vite-specific)
# ==============================================================================

# Frontend Supabase configuration (these will be exposed in client)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API URL for frontend
VITE_API_URL=http://localhost/api

# ==============================================================================
# OPTIONAL CONFIGURATIONS
# ==============================================================================

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5178,http://localhost:3000

# Email configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# File upload limits
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# ALLOWED_EXTENSIONS=pdf,txt,docx

# ==============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# ==============================================================================

# Database override for testing
# TEST_DATABASE_URL=sqlite:///test.db

# Debug flags
# DEBUG=true
# FLASK_DEBUG=1

# ==============================================================================
# GENERATION COMMANDS
# ==============================================================================
#
# Generate secure secrets:
#
# SECRET_KEY & JWT_SECRET:
#   python -c "import secrets; print('SECRET_KEY=' + secrets.token_hex(32))"
#   python -c "import secrets; print('JWT_SECRET=' + secrets.token_hex(32))"
#
# REDIS_PASSWORD:
#   python -c "import secrets; print('REDIS_PASSWORD=' + secrets.token_urlsafe(32))"
#
# Random UUID (for testing):
#   python -c "import uuid; print(str(uuid.uuid4()))"
#
# ==============================================================================