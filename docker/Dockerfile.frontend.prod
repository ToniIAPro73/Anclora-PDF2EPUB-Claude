FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
# Clean install to fix Rollup native module issues
RUN npm ci --no-audit

COPY . .

# Construir para producción
RUN npm run build

EXPOSE 5178

# Usar modo preview para producción
CMD ["npm", "run", "serve", "--", "--host", "0.0.0.0", "--port", "5178"]
